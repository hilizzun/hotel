<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Авторизация" MinHeight="450" MinWidth="800" SizeToContent="WidthAndHeight">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Авторизация"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#333"
                   HorizontalAlignment="Center"
                   Margin="0,10"
                   FontFamily="Bahnscshift"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" Width="360" HorizontalAlignment="Center">
            <TextBlock Text="Login" FontWeight="Bold" FontSize="14" Foreground="#444"/>
            <TextBox x:Name="txtUsername"
                     Margin="0, 5, 0, 10"
                     Height="35"
                     BorderThickness="1"/>
            <TextBlock Text="Password" FontWeight="Bold" FontSize="14" Foreground="#444"/>
            <PasswordBox x:Name="txtPassword"
                     Margin="0, 5, 0, 10"
                     Height="35"
                     BorderThickness="1"/>
            <Button Content="Enter"
                Width="120"
                Height="30"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Cursor="Hand" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>