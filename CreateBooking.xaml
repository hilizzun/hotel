<Window x:Class="WpfApp1.CreateBooking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="CreateBooking" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Создание нового бронирования" FontSize="16" Grid.Row="0" Margin="0,0,0,10"/>
        <TextBlock Text="Фамилия:" FontSize="14" Grid.Row="1" Margin="0,0,0,10"/>
        <TextBox Name="GuestLastNameBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"/>
        <TextBlock Text="Имя:" FontSize="14" Grid.Row="2" Margin="0,0,0,10"/>
        <TextBox Name="GuestFirstNameBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5"/>
        <TextBlock Text="Номер документа:" FontSize="14" Grid.Row="3" Margin="0,0,0,10"/>
        <TextBox Name="GuestDocumentNumberBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,5"/>
        <TextBlock Text="Email:" FontSize="14" Grid.Row="4" Margin="0,0,0,10"/>
        <TextBox Name="GuestEmailBox" Grid.Row="4" Grid.Column="1" Margin="0,0,0,5"/>
        <TextBlock Text="Телефон:" FontSize="14" Grid.Row="5" Margin="0,0,0,10"/>
        <TextBox Name="GuestPhoneBox" Grid.Row="5" Grid.Column="1" Margin="0,0,0,5"/>
        <TextBlock Text="Номер:" FontSize="14" Grid.Row="6" Margin="0,0,0,10"/>
        <ComboBox Name="GuestNumberBox" Grid.Row="6" Grid.Column="1" Margin="0,0,0,5"/>
        <TextBlock Text="Дата заезда:" FontSize="14" Grid.Row="7" Margin="0,0,0,10"/>
        <DatePicker Name="GuestCheckIn" Grid.Row="7" Grid.Column="1" Margin="0,0,0,5"/>
        <TextBlock Text="Дата выезда:" FontSize="14" Grid.Row="8" Margin="0,0,0,10"/>
        <DatePicker Name="GuestCheckOut" Grid.Row="8" Grid.Column="1" Margin="0,0,0,5"/>
        <Button Content="Сохранить"
             Width="150"
             Height="30" 
             Grid.Row="10"
             Click="SaveButton_Click"/>



    </Grid>
</Window>
