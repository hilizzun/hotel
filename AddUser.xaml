<Window x:Class="WpfApp1.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Добавление пользователя" MinHeight="450" MinWidth="800" SizeToContent="WidthAndHeight">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Добавление пользователя"
           FontSize="24"
           FontWeight="Bold"
           Foreground="#333"
           HorizontalAlignment="Center"
           Margin="0,10"
           FontFamily="Bahnscshift"/>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" Width="360" HorizontalAlignment="Center">
            <TextBlock Text="Фамилия" FontWeight="Bold" FontSize="14" Foreground="#444"/>
            <TextBox x:Name="txtLastName"
             Margin="0, 5, 0, 10"
             Height="35"
             BorderThickness="1"/>
            <TextBlock Text="Имя" FontWeight="Bold" FontSize="14" Foreground="#444"/>
            <TextBox x:Name="txtFirstName"
             Margin="0, 5, 0, 10"
             Height="35"
             BorderThickness="1"/>
            <TextBlock Text="Username" FontWeight="Bold" FontSize="14" Foreground="#444"/>
            <TextBox x:Name="txtUsername"
             Margin="0, 5, 0, 10"
             Height="35"
             BorderThickness="1"/>
            <TextBlock Text="Роль" FontWeight="Bold" FontSize="14" Foreground="#444"/>
            <TextBox x:Name="txtRole"
             Margin="0, 5, 0, 10"
             Height="35"
             BorderThickness="1"/>
            <TextBlock Text="Email" FontWeight="Bold" FontSize="14" Foreground="#444"/>
            <TextBox x:Name="txtEmail"
             Margin="0, 5, 0, 10"
             Height="35"
             BorderThickness="1"/>
            <TextBlock Text="Номер телефона" FontWeight="Bold" FontSize="14" Foreground="#444"/>
            <TextBox x:Name="txtPhone"
             Margin="0, 5, 0, 10"
             Height="35"
             BorderThickness="1"/>
            <TextBlock Text="Пароль" FontWeight="Bold" FontSize="14" Foreground="#444"/>
            <PasswordBox x:Name="txtPassword"
             Margin="0, 5, 0, 10"
             Height="35"
             BorderThickness="1"/>
            <Button Content="Добавить пользователя"
             Width="150"
             Height="30"
             FontWeight="Bold"
             HorizontalAlignment="Center"
             Cursor="Hand" Click="Button_Click"/>
        </StackPanel>

    </Grid>
</Window>
