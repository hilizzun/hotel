<Window x:Class="WpfApp1.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFDA89" Offset="0.0"/>
            <GradientStop Color="#FFC24A" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="20">
        <TabControl x:Name="ManagerPanel">
            <TabItem Header="Гости">
                <Frame Name="GuestsFrame" NavigationUIVisibility="Hidden" />
            </TabItem>
            <TabItem Header="Бронирования">
                <Frame Name="BookingsFrame" NavigationUIVisibility="Hidden" />
            </TabItem>
            <TabItem Header="Номерной Фонд">
                <Frame Name="RoomsFrame" NavigationUIVisibility="Hidden" />
            </TabItem>
            <TabItem Header="Управление клинингом">
                <Frame Name="CleaningFrame" NavigationUIVisibility="Hidden" />
            </TabItem>
        </TabControl>

    </Grid>
</Window>
