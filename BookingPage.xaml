<Page x:Class="WpfApp1.BookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BookingPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <Button Name="NewBookingButton" Content="Добавить бронирование" Padding="10,5" Margin="0 0 10 0"
            Click="NewBookingButton_Click"/>
            <Button Name="UpdateButton" Content="Обновить" Padding="10,5" Margin="0 0 10 0"
            Click="UpdateButton_Click"/>
        </StackPanel>
        <DataGrid Name="BookingsDataGrid" AutoGenerateColumns="False" 
                  Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="50" />
                <DataGridTextColumn Header="ФИ" Binding="{Binding FullName}" Width="150" />
                <DataGridTextColumn Header="Номер" Binding="{Binding RoomNumber}" Width="80" />
                <DataGridTextColumn Header="Дата заезда" Binding="{Binding check_in_date}" Width="100" />
                <DataGridTextColumn Header="Дата выезда" Binding="{Binding check_out_date}" Width="100" />
                <DataGridTextColumn Header="Общая стоимость" Binding="{Binding total_price}" Width="150" />
                <DataGridTextColumn Header="Статус" Binding="{Binding status}" Width="150" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
